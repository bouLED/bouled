#version 330 core

layout(location=0) in vec3 vertexPosition_modelspace;
layout(location=1) in mat4 model;
uniform mat4 view;
uniform mat4 projection;
uniform int numberOfLedsPerTriangle;
out vec3 color_f;
uniform samplerBuffer texture_buffer;

void main() {
    gl_Position = projection * view * model * vec4(vertexPosition_modelspace, 1);
    color_f = texelFetch(texture_buffer, (1 + numberOfLedsPerTriangle) * gl_InstanceID + (gl_VertexID+1)/4).rgb;
}
